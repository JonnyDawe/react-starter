{
  "name": "react-starter",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "npm run generate-sprites && husky && npm run extract-theme-variables",
    "dev": "vite --port 3000",
    "build": "vite build && tsc",
    "serve": "vite preview",
    "test": "vitest run",
    "lint": "eslint --fix",
    "check-types": "tsc --noemit -p tsconfig.json",
    "generate-changelog": "changelogen",
    "extract-sprites": "tsx scripts/extract-sprites.ts",
    "generate-sprites": "tsx scripts/generate-sprites.ts && npm run lint",
    "extract-theme-variables": "tsx scripts/extract-theme-variables.ts",
    "new-component": "plop"
  },
  "dependencies": {
    "@fontsource-variable/work-sans": "^5.2.8",
